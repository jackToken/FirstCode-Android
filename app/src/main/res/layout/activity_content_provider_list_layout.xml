<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/eg_game_content_provider_list_contacts_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get all contacts"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CRUD"
            />

        <Button
            android:id="@+id/eg_game_insert_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="insert"
            />

        <Button
            android:id="@+id/eg_game_update_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="update"
            />

        <Button
            android:id="@+id/eg_game_query_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="query"
            />

        <Button
            android:id="@+id/eg_game_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="delete"
            />

        <TextView
            android:id="@+id/eg_game_data_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="textData"
            />
    </LinearLayout>

</LinearLayout>
